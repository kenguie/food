<h1> Here are some more posts from <%= @post.user.fname %>: </h1>
<p> Click on the post to see more of the conversation. </p>

<ol class="listposts">
	<% @posts.each do |post| %>
		<% if @post.user.id == post.user.id %>
  		<li> <%= link_to post.body, post_path(post) %> from <%= post.user.fname %> </li>
		<% end %>
	<% end %>
</ol>

<div class="nav">
<%= link_to 'Back', posts_path %> |  
<%= link_to 'Log out', destroy_user_session_path, method: :delete %>
</div>