<br/> -->


<%if current_user && @post.user != current_user %>
  <% if current_user.followeds.include? @post.user %>
      <%= link_to 'unfollow', unfollow_post_path(@post.user), method: :post %> 
    <% else %>
      <%= link_to 'follow', follow_post_path(@post.user), method: :post %>
  <% end %>
<% end %>


